{ id:4,name:"Shoe Supplier",price:25,sale:15,rating:4.6,image:"https://cdn.discordapp.com/attachments/1469197712913203400/1471966252061819083/48B968B0-9286-4346-9A1D-3C96696BEBDB.png?ex=6990dae6&is=698f8966&hm=e28981c4c9bca0ec75ec3b9fb65b79f80a509e0f403b8bd499c5b79f0abe0b04&"},
{ id:5,name:"1of1 Watch Supplier",price:35,sale:15,rating:4.8,image:"https://cdn.discordapp.com/attachments/1469197712913203400/1471971326062366831/F6984F3D-A9B7-4D0F-A877-9C6AA1C63D96.png?ex=6990dfa0&is=698f8e20&hm=72a3854a2fc4ce248de5609099533f94d82b76a6443d9386d8b374dfc6c64695&"},
{ id:6,name:"Shirt Supplier",price:25,sale:15,rating:4.4,image:"https://cdn.discordapp.com/attachments/1469197712913203400/1471971572817596601/153BC16A-7D5A-47AF-B40A-C6F6C6DEF2D7.png?ex=6990dfda&is=698f8e5a&hm=4dfebc0016e164f38ce95da8e0c7190ad62b64d607a6565b2c37e37402bdabd6&"}
];

let cart=JSON.parse(localStorage.getItem("cart"))||[];

const endDate=new Date().getTime()+86400000;

setInterval(()=>{
let now=new Date().getTime();
let distance=endDate-now;

let h=Math.floor(distance/(1000*60*60));
let m=Math.floor((distance%(1000*60*60))/(1000*60));
let s=Math.floor((distance%(1000*60))/1000);

document.getElementById("countdown").innerText=
"Sale Ends In: "+h+"h "+m+"m "+s+"s";
},1000);

function renderProducts(){
const container=document.getElementById("products");
container.innerHTML="";

products.forEach(p=>{

const discount=Math.round(((p.price-p.sale)/p.price)*100);

container.innerHTML+=`
<div class="bg-zinc-900 p-6 rounded border border-red-700 card-hover text-center relative">

<span class="absolute top-3 left-3 bg-red-600 px-2 py-1 rounded text-sm">
${discount}% OFF
</span>

<img src="${p.image}" class="mx-auto mb-4 rounded">

<h3 class="text-lg font-bold">${p.name}</h3>

<div class="text-yellow-400">‚≠ê ${p.rating}</div>

<p class="line-through text-gray-400">$${p.price}</p>
<p class="text-red-400 text-xl font-bold">$${p.sale}</p>

<button onclick="addToCart(${p.id})"
class="bg-red-600 px-4 py-2 rounded mt-2 glow-red">
Add To Cart
</button>

</div>`;
});
}

function addToCart(id){
const product=products.find(p=>p.id===id);
cart.push({...product,finalPrice:product.sale});
localStorage.setItem("cart",JSON.stringify(cart));
updateCart();
}

function updateCart(){
document.getElementById("cart-count").innerText=cart.length;

const items=document.getElementById("cart-items");
const total=document.getElementById("cart-total");

items.innerHTML="";
let sum=0;

cart.forEach((item,i)=>{
sum+=item.finalPrice;

items.innerHTML+=`
<li class="flex justify-between border-b border-red-800">
${item.name} - $${item.finalPrice}
<button onclick="removeItem(${i})" class="text-red-500">X</button>
</li>`;
});

if(cart.length>=3){
sum=Math.round(sum*0.85);
items.innerHTML+=`<li class="text-green-400">üéÅ Bundle Discount Applied (15%)</li>`;
}

total.innerText=sum;
}

function removeItem(i){
cart.splice(i,1);
localStorage.setItem("cart",JSON.stringify(cart));
updateCart();
}

function toggleCart(){
document.getElementById("cart-modal").classList.toggle("hidden");
updateCart();
}

function checkout(){
alert("Demo checkout complete!");
cart=[];
localStorage.removeItem("cart");
updateCart();
toggleCart();
}

const names=["Alex.B","Jordan.T","Chris.K","Taylor.R","Morgan.S","Tez.G","Rich,T","Wanda.K","Cam.R","Robert,M"];

setInterval(()=>{
const p=products[Math.floor(Math.random()*products.length)];
const n=names[Math.floor(Math.random()*names.length)];

const popup=document.getElementById("popup");
popup.innerText=`${n} just purchased ${p.name}`;
popup.style.display="block";

setTimeout(()=>popup.style.display="none",4000);
},9000);

renderProducts();
updateCart();

</script>

