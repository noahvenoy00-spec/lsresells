<script>

const products=[
{ id:1,name:"Cologn Supplier",price:35,sale:15,rating:4.7,image:"https://cdn.discordapp.com/attachments/1469197712913203400/1471966673262346342/08FF1B9D-DCFD-4914-94B7-67FC5AFCAA23.png?ex=6990db4a&is=698f89ca&hm=74fa685d21cba3f4cc4281e31bfeb7edffcf28b5c5031f9647c0280d6a44ea9f&"},
